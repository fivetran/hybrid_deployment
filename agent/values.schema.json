{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Chart Values",
  "type": "object",
  "properties": {
    "image": {
      "type": "string",
      "description": "The container image to use for the agent",
      "default": "us-docker.pkg.dev/prod-eng-fivetran-ldp/public-docker-us/ldp-agent:production"
    },
    "image_pull_policy": {
      "type": "string",
      "enum": ["Always", "IfNotPresent", "Never"],
      "description": "Image pull policy for the container",
      "default": "Always"
    },
    "config": {
      "type": "object",
      "properties": {
        "data_volume_pvc": {
          "type": "string",
          "description": "PersistentVolumeClaim for the data volume"
        },
        "token": {
          "type": "string",
          "description": "Authentication token for the agent"
        },
        "kubernetes_affinity": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "rule": {
                "type": "string"
              },
              "connectors": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "minItems": 1
              },
              "default": {
                "type": "boolean"
              }
            },
            "required": [
              "rule"
            ],
            "if": {
              "not": {
                "properties": {
                  "default": {
                    "const": true
                  }
                },
                "required": [
                  "default"
                ]
              }
            },
            "then": {
              "required": [
                "connectors"
              ]
            },
            "additionalProperties": false
          }
        }
      },
      "required": ["data_volume_pvc", "token"]
    },
    "labels": {
      "type": "object",
      "description": "Custom labels to apply to resources",
      "default": {}
    },
    "node_selector": {
      "type": "object",
      "description": "Node selector for scheduling the agent pod",
      "default": {}
    },
    "agent": {
      "type": "object",
      "properties": {
        "image": {
          "type": "string",
          "description": "The container image to use for the agent",
          "default": "us-docker.pkg.dev/prod-eng-fivetran-ldp/public-docker-us/ldp-agent:production"
        },
        "image_pull_policy": {
          "type": "string",
          "enum": ["Always", "IfNotPresent", "Never"],
          "description": "Image pull policy for the container",
          "default": "Always"
        },
        "labels": {
          "type": "object",
          "description": "Custom labels to apply to resources",
          "default": {}
        },
        "node_selector": {
          "type": "object",
          "description": "Node selector for scheduling the agent pod",
          "default": {}
        },
        "tolerations": {
          "type": "array",
          "items": {
            "type": "object",
            "description": "Toleration for scheduling the agent pod"
          },
          "default": []
        },
        "resources": {
          "type": "object",
          "properties": {
            "requests": {
              "type": "object",
              "properties": {
                "cpu": {
                  "type": "string",
                  "pattern": "^[0-9]+(m)?$",
                  "description": "Requested CPU for the agent container",
                  "default": "2"
                },
                "memory": {
                  "type": "string",
                  "pattern": "^[0-9]+(Mi|Gi)$",
                  "description": "Requested memory for the agent container",
                  "default": "2Gi"
                }
              }
            },
            "limits": {
              "type": "object",
              "properties": {
                "cpu": {
                  "type": "string",
                  "pattern": "^[0-9]+(m)?$",
                  "description": "CPU limit for the agent container",
                  "default": "2"
                },
                "memory": {
                  "type": "string",
                  "pattern": "^[0-9]+(Mi|Gi)$",
                  "description": "Memory limit for the agent container",
                  "default": "2Gi"
                }
              }
            }
          }
        }
      }
    },
    "affinity_rules": {
      "type": "object",
      "description": "Map of affinity rule names to their rule definitions. At least one rule name key is required when kubernetes_affinity is non-empty.",
      "additionalProperties": {
        "type": "object",
        "description": "Affinity rule definition",
        "default": {}
      },
      "default": {}
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "config": {
            "properties": {
              "kubernetes_affinity": {
                "type": "array",
                "minItems": 1
              }
            },
            "required": ["kubernetes_affinity"]
          }
        }
      },
      "then": {
        "required": ["affinity_rules"],
        "properties": {
          "affinity_rules": {
            "type": "object",
            "minProperties": 1
          }
        }
      }
    }
  ],
  "required": ["config", "agent"],
  "additionalProperties": true
}